<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff8a80"
    tools:context="com.example.android.courtcounter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@android:dimen/thumbnail_width"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:text="Team A"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/teamA_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:text="0"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="#f44336"
                android:onClick="addPointsTeamAPlusThree"
                android:text="3 points"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="#f44336"
                android:onClick="addPointsTeamAPlusTwo"
                android:text="2 points"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="#f44336"
                android:onClick="addPointsTeamAPlusOne"
                android:text="1 point"
                android:textAllCaps="true"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@android:dimen/thumbnail_width"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:text="Team B"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/teamB_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:text="0"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="#f44336"
                android:onClick="addPointsTeamBPlusThree"
                android:text="3 points"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="#f44336"
                android:onClick="addPointsTeamBPlusTwo"
                android:text="2 points"
                android:textAllCaps="true"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="#f44336"
                android:onClick="addPointsTeamBPlusOne"
                android:text="1 point"
                android:textAllCaps="true"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="#f44336"
        android:onClick="clear"
        android:text="Clear" />


</RelativeLayout>
